<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register1_basic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="@drawable/hoogtelijnenbackground"
    tools:context="swarm_app_3.ehb.com.contourtheapp.Activities.Register1Basic"
    android:orientation="vertical">

    <TextView
        android:text="@string/RegisterBasicTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblTitleRegi1"
        android:textColor="@android:color/black"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="|"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtLineRegi1b"
            android:layout_weight="1"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:layout_marginLeft="30dp" />

        <TextView
            android:text="@string/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblNameRegi1"
            android:layout_weight="100"
            android:textColor="@android:color/black"
            android:paddingBottom="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textSize="18sp" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtNameRegi1"
        android:background="@color/lightgrey"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="|"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtLineRegi1a"
            android:layout_weight="1"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:layout_marginLeft="30dp" />

        <TextView
            android:text="@string/dateofbirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblDateOfBirthRegi1"
            android:layout_weight="100"
            android:textColor="@android:color/black"
            android:paddingBottom="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textSize="18sp" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtDateOfBirthRegi1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="10dp"
        android:background="@color/lightgrey"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="|"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtLineRegi1"
            android:layout_weight="1"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:layout_marginLeft="30dp" />

        <TextView
            android:text="@string/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblCityRegi1"
            android:layout_weight="100"
            android:textColor="@android:color/black"
            android:paddingBottom="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textSize="18sp" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtCityRegi1"
        android:background="@color/lightgrey"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/inschrijving1"
            android:id="@+id/imageView4"
            android:layout_weight="4"
            android:scaleType="fitCenter"
            android:layout_width="150dp"
            android:scaleX=".8"
            android:scaleY=".8"
            android:adjustViewBounds="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="100dp"
            android:padding="10dp" />

        <TextView
            android:text="@string/next"
            android:layout_height="wrap_content"
            android:id="@+id/lblNextRegi1"
            android:textColor="@android:color/black"
            android:padding="10dp"
            android:background="@android:color/white"
            android:layout_weight="1"
            android:layout_width="80dp"
            android:gravity="center_horizontal"
            android:layout_marginRight="30dp"
            android:onClick="goToRegi2"/>
    </LinearLayout>

</LinearLayout>
